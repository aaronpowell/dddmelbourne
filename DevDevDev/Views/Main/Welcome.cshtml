@using DevDevDev.Models
<div class="copy-block row">
    <div class="large-8 columns">
        <h4>@EventConfig.EventTitle is back for 2017</h4>

        <p>
            DDD Sydney is a non profit community event run by developers for developers. Anyone can submit a session to the event and delegates then vote on the sessions they want to see.
        </p>

        <p>
            @*Votes are in, we're putting the finishing touches on the agenda and will have it out shortly!*@
            @*@Html.RouteLink("Vote for sessions", "vote", null, new { @class = "button" })*@
            @*@Html.RouteLink("Submit Session", "submit-a-session", null, new{@class="button"})
                &nbsp;&nbsp;
                @Html.RouteLink("View sessions submitted", "view-sessions", null, new {@class = "button secondary"})
            *@
            @Html.RouteLink("View Agenda", "agenda", null, new {@class = "button"})
            <br />
            And other events @Html.ActionLink("in the community", "UserGroups", "Main").
        </p>

        @*<p>
                <a class="button secondary" href="https://docs.google.com/document/d/1sVO0K4w20URdBnPl_s1Ryp7_WkrrilnIY3l85isdX2E">View the conference guide</a>
            </p>

            <p>
                Sorry, tickets have sold out! If you missed out on DDD Melbourne, please consider attending <a href="https://dddperth.com/" target="_blank">DDD Perth</a> or <a href="http://dddbrisbane.com/" target="_blank">DDD Brisbane</a>.
            </p>*@

        <div class="booking-frame">
            <iframe src="//eventbrite.com.au/tickets-external?eid=34497049604&ref=etckt" frameborder="0" height="320" width="100%" vspace="0" hspace="0" marginheight="5" marginwidth="5" scrolling="auto" allowtransparency="true"></iframe>
        </div>
        <div class="booking-link">
            @Html.RouteLink("Register for DDD Sydney", "register", null, new { @class = "button" })
        </div>

    </div>

    <div class="large-4 columns">
        <div class="panel">
            <h4>@EventConfig.EventDateDescription</h4>
            <ul>
                <li>One Day</li>
                <li>Fully Catered</li>
                <li>Industry-leading Presenters</li>
                <li>Only $59 (plus $4.23 in <a href="https://www.eventbrite.com/support/articles/en_US/Troubleshooting/how-much-does-it-cost-for-organizers-to-use-eventbrite?lg=en_US">EventBrite fees</a>)</li>
                <li><a target="_blank" href="https://www.google.com.au/maps/place/Universal+Cafeteria/@("@")-33.8830694,151.1999196,17z/data=!4m8!1m2!2m1!1s702-730+Harris+Street,+Broadway,+NSW+2007!3m4!1s0x6b12ae266375a83f:0x4c640ab28f18c99b!8m2!3d-33.883173!4d151.201952?hl=en">Located at UTS</a></li>
            </ul>
        </div>
    </div>

    <div class="large-4 columns">

        @Html.Partial("ImportantDates")

    </div>
</div>
